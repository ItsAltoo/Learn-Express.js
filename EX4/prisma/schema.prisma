generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  age  Int

  employed   Employed? @relation(fields: [employedId], references: [id])
  employedId String?   @db.ObjectId

  
}

model Employed {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  user User[]
}
